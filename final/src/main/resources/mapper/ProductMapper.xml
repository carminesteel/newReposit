<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.ProductMapper">
	<select id="productList" resultType="com.example.domain.ProductVO">
		select * from product limit 0,10
	</select>
	
	<insert id="insert">
		insert into insert into product (user_id, title, content, image, price)
		values (#{user_id}, #{title}, #{content}, #{image}, #{price})
	</insert>
	
	<insert id="attachInsert">
		insert into p_imageList(p_no, images) values(#{p_no},#{images})
	</insert>
</mapper>